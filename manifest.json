{
  "manifest_version": 2,
  "name": "WeChatSquirrel",
  "description": "Helps you use web WeChat with more fun",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "squirrel.html"
  },

  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
     "unlimitedStorage",
     "tabs",
     "storage",
     "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
      {
        "matches": ["*://wx.qq.com/*"],
        "css":["squirrel.css"],
        "js": ["jquery.js", "squirrel.js"]
      }
  ]
}